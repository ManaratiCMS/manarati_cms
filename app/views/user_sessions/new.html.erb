<%content_for :style do -%>
 <%=stylesheet_link_tag "themes/#{@skin}/pages/login"%>
<%-end-%>
<div class="login">
<% form_for @user_session, :url => user_session_path do |f| %>
<% if  f.error_messages!="" %>
<div class="message_box"  >
    <%= f.error_messages %>
</div>
<%end%>
<div id="login" class="formulaire">
  <div class="maincol">
  <h1><%=t("identification")%></h1>
  <div class="form_row">
    <label><strong><%=t("login")%>:</strong></label>
    <%= f.text_field :login %>
  </div>
  <div class="form_row">
 
  <label><strong><%=t("mot_de_passe")%>:</strong></label>
  <%= f.password_field :password %>
  </div>
   <!--
  <p class="rest_connected">
  <%= f.check_box :remember_me %>
  <label class="nostyle"><%=t("rester_connecte")%></label>
  </p>
   -->
  <div class="right">
  <button class="abutton" type="submit"><%=t("connexion")%></button>
  </div>
  </div>
  <div class="rightcol">
      <ul>
           <%- if has_role?(:gestion_membre)-%>
           <li><a href="/account/new"><%=t("inscrivez_vous")%></a></li>
           <%-end-%>
      </ul>
  </div>
</div>
<% end %>
  </div>