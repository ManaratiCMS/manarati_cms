<%content_for :style do %>
<style type="text/css" >
  .formulaire label{
    width:  160px;
}
</style>
<%end%>
<div class="content_dev" >
<div class="inscription">
<h1><%=t("inscription")%></h1>
<div class="formulaire" >
<% form_for @user, :url => account_path do |f| %>
  <%if f.error_messages !="" %>
  <div class="message_box">
    <%= f.error_messages %>
  </div>
  <%end%>
  <%= render :partial => "form", :object => f %>
  <%= f.submit t("inscription") %>

<% end %>
</div>
</div>
</div>