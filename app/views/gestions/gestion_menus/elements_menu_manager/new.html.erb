<%content_for :style do %>
<%=stylesheet_link_tag "themes/#{@skin}/admin/gestion/ajouter" %>
<%=stylesheet_link_tag "themes/#{@skin}/libs/plugin_jquery/validation-engine/validationEngine.jquery" %>
 
<%end%>
<%content_for :script do %>
<%=javascript_include_tag "libs/jquery-ui/jquery.ui.tabs"  %>
<%=javascript_include_tag "libs/plugin_jquery/validation-engine/jquery.validationEngine"  %>
<%=javascript_include_tag "libs/plugin_jquery/validation-engine/lang/jquery.validationEngine-fr"  %>

 


<script type="text/javascript">
	$(function() {
		$("#tabs-formulaire").tabs();
	});
</script>
<script>
jQuery(document).ready(function(){
			// binds form submission and fields to the validation engine
			jQuery("#ajouter_menu_form").validationEngine();
		});
</script>
 
<%end%>
<div class="ajouter">
<div class="header_gestion">
<h1 class="titre"><%=t("Gestions.Pages.Ajouter.titre")%></h1>
</div>
<div id="tabs-formulaire">
	<ul>
		<li><a href="#tabs-1"><%=t("Gestions.infoGenerale")%></a></li>
	</ul>
	<div id="tabs-1">
          <div class="formulaire">
          <% form_for :element_menu, @element_menu, :url => { :action => "create" }, :html => {:id=>"ajouter_menu_form",:class => "formulaire",:multipart => true} do |f| %>
         <%if f.error_messages !="" %>
          <div class="message_box">
              <%= f.error_messages %>
          </div>
           <%end%>
          <%=render :partial=>"/gestions/gestion_menus/elements_menu_manager/partials/form_element_menus" ,:locals=>{:f=>f}%>
          <div class="submit">
          <%= submit_tag t("ajouter") %>
          </div>
          <% end %>
          </div>
           
	</div>
</div>
</div>
