<%content_for :style do %>
       <%=stylesheet_link_tag "themes/#{@skin}/pages/inscription" %>
<%end%>
<h1>Ajouter</h1>
<ul>
  <% form_for :membre, @membre, :url => { :action => "confirmation" }, :html => {:class => "form_inscription"} do |f| %>
  <li><label><%=t("nom")%></label><%= f.text_field :nom %></li>
  <li><label><%=t("prenom")%></label><%= f.text_field :prenom %></li>
  <li><label><%=t("email")%></label><%= f.text_field :email %></li>
  <li><%= submit_tag "ok" %></li>
<% end %>
</ul>