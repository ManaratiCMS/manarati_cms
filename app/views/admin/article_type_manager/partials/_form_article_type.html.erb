     <td>
       <ul>
        <% @themes.each do |theme| %>
        <li>
          <%= check_box_tag 'themes[]', theme.ref_theme, (@cmp_article_type.cmp_article_type_themes.collect { |r| r.ref_theme  }.include?(theme.ref_theme)) -%>
          <%=h theme.nom -%>
