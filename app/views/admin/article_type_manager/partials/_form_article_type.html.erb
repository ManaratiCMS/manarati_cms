  </tr>
 
  <tr>
    <td><label><%=t("GestionArticlesType.Label.reference")%></label></td>
    <td><%= f.text_field :reference %></td>
  </tr>
  <tr>
    <td><label>Génération physique</label></td>

    <td>
        <%= select("cmp_article_type", "generation_physique",[[t("oui"), 1],[t("nom"),0]], { :include_blank => false })%>
    </td>
  </tr>
  <tr>
