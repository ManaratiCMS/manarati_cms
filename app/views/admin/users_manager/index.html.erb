<%content_for :style do -%>
<%=stylesheet_link_tag "themes/#{@skin}/general/gestion" -%>
<%-end -%>
<div class="header_gestion">
<h1><%=t("GestionUsers.titre_de_gestion")%></h1>
 
</div>

<div class="cmp_data_grid">
  <table>
    <thead>
      <tr>
          <td><%=t("nom")%></td>
          <td><%=t("prenom")%></td>
          <td><%=t("login")%></td>
          <td><%=t("email")%></td>
          <td><%=t("action")%></td>
      </tr>
    </thead>
    <tbody>
      <%@users.each { |user|%>
      <tr>
        <td><%=user.nom%></td>
        <td><%=user.prenom%></td>
        <td><%=user.login%></td>
        <td><%=user.email%></td>
        <td>
          <div class="action">
            <a href="/admin/users_manager/edit/<%=user.id%>" title="<%=t("editer")%>"><span class="editer"> </span></a>
            <%= link_to "<span class='supprimer'> </span>",{
            :action =>"delete",
            :controller=>"/admin/users_manager" ,
            :id=>user.id},:title=> t("supprimer"), :confirm => t("GestionUsers.msg.confirmation_suppresion")
           %>

           </div>
        </td>
      </tr>
      <%-}-%>
    </tbody>
  </table>
</div>