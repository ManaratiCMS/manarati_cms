<%content_for :style do -%>
<%=stylesheet_link_tag "themes/#{@skin}/general/gestion" -%>
<%-end -%>
<div class="header_gestion">
<h1><%=t("GestionSites.Pages.choix_pocesseur_site.titre")%></h1>
</div>

<div class="cmp_data_grid">
  <table>
    <thead>
      <tr>
          <td><%=t("nom")%></td>
          <td><%=t("prenom")%></td>
          <td><%=t("login")%></td>
          <td><%=t("email")%></td>
          <td><%=t("action")%></td>
      </tr>
    </thead>
    <tbody>
      <%@users.each { |user|%>
      <tr>
        <td><%=user.nom%></td>
        <td><%=user.prenom%></td>
        <td><%=user.login%></td>
        <td><%=user.email%></td>
        <td>
          <div class="action">
            <a href="/admin/sites_manager/new/<%=user.id%>" title="<%=t("GestionSites.Pages.New.titre")%>"><span class="add_site"> </span></a>
           </div>
        </td>
      </tr>
      <%-}-%>
    </tbody>
  </table>
</div>